<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    tools:context=".MainActivity">

<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Formulario de Carga"
android:textSize="24sp"
android:textColor="#BBDEFB"
    android:textStyle="bold"
    android:paddingBottom="16dp"
    android:gravity="center" />

<EditText
android:id="@+id/direccion"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="DirecciÃ³n origen"
android:inputType="text"
android:background="#424242"
    android:textColor="#BBDEFB"
    android:padding="10dp" />

<EditText
android:id="@+id/tipo"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Tipo de carga"
android:inputType="text"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<EditText
android:id="@+id/alto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Alto"
android:inputType="numberDecimal"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<EditText
android:id="@+id/ancho"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Ancho"
android:inputType="numberDecimal"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<EditText
android:id="@+id/peso"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Peso"
android:inputType="numberDecimal"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<EditText
android:id="@+id/hora"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Hora"
android:inputType="time"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<EditText
android:id="@+id/fecha"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Fecha"
android:inputType="date"
android:background="#424242"
android:textColor="#BBDEFB"
android:padding="10dp" />

<Button
android:id="@+id/guardarDatos"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:onClick="BotonCarga"
android:text="Guardar datos"
android:background="#BBDEFB"
    android:textColor="#000000"
    android:padding="10dp" />

<Button
android:id="@+id/consultarDatos"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:onClick="solicitar"
android:text="Consultar datos"
android:background="#BBDEFB"
android:textColor="#000000"
android:padding="10dp" />

<ListView
android:id="@+id/daticos"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:background="#FFFFFF"
    android:divider="#B0BEC5"
    android:dividerHeight="1dp" />

    </LinearLayout>
